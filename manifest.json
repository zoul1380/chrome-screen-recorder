{
  "manifest_version": 3,  "name": "Screen Recorder - WebM & GIF",
  "version": "1.0",
  "description": "Record screen, windows or tabs and save as WebM (VP9/H.264) or GIF with in-browser conversion",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "offscreen",
    "notifications"
  ],  "action": {
    "default_title": "Screen Recorder - Choose Format",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background-display.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.wasm", "*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
